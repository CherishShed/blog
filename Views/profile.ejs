    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/profile.css" rel="stylesheet" />
    <title class="title"></title>
</head>

<body>
    <!-- <hr class="divider"> -->

    <%- include('partials/nav.ejs') %>

        <!-- Button trigger modal -->
        <!-- Modal -->
        <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Profile</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <form action="/editprofiledetails" method="POST" enctype="multipart/form-data"
                                id="editForm">
                                <!-- Ará Òrun Kìn-ìn Kin-in: Òy-Yò -->
                                <div class="pic-container">
                                    <div class="profile-image-container">
                                        <img src="/Images/avatar.png" alt="" class="profile-image">
                                    </div>
                                    <label>
                                        <input type="file" style="display:none" id="picfileInput" name="profilePic"
                                            accept="image/*" />
                                    </label>
                                    <span class="pic-icon btn btn-outline-dark"
                                        onclick="document.getElementById('picfileInput').click()">Change
                                        Picture <i class="fa-solid fa-file-arrow-up"></i></span>
                                </div>
                                <label for="">Name
                                    <div class="name-input-container">
                                        <input type="text" name="fname" placeholder="First Name" id="fname"
                                            class="name-input">
                                        <input type="text" name="lname" placeholder="Last Name" id="lname"
                                            class="name-input">
                                    </div>
                                </label>
                                <label for="emailaddress">Email
                                    <input type="email" name="email" id="emailaddress" placeholder="Email" disabled>
                                </label>

                                <label for="aboutYou">About You
                                    <textarea type="text" name="about" id="aboutYou"
                                        placeholder="About Yourself"></textarea>
                                </label>
                                <label>Social Media <span class="social-info">(paste the link to the corresponding
                                        social media profile)</span>
                                    <div class="social-input">
                                        <input type="text" name="linkedin"
                                            placeholder="https://www.linkedin.com/in/{username}" id="linkedin">
                                        <input type="text" name="twitter" placeholder="https://twitter.com/{username}"
                                            id="twitter">
                                        <input type="text" name="facebook"
                                            placeholder="https://www.facebook.com/{username}" id="facebook">
                                        <input type="text" name="instagram"
                                            placeholder="https://www.instagram.com/{username}" id="instagram">
                                    </div>
                                </label>
                            </form>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary submit">Save</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="toast mt-3">
            <div class="toast-header">
                <p>header</p>
            </div>
            <div class="toast-body">
                <p class="toast-text"></p>
            </div>
        </div>

        <section class="profile-intro">
            <button class="btn bg-light btn-outline-light edit" data-toggle="modal" data-target="#modelId">Edit <i
                    class="fa-solid fa-user-pen"></i></button>
            <div class="profile-pic-name">

                <img src="" alt="" id="profile-owner-pic">

                <h5 id="profile-owner-name"></h5>
            </div>
            <div class="profile-about-socials">
                <p id="about"></p>
                <div class="socials">
                </div>
            </div>
        </section>

        <section class="user-posts">
            <h1 class="no-value">No Posts</h1>
        </section>
        <%- include('partials/footer.ejs') %>

            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
                integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
            >
            <script>
                AOS.init({
                    duration: 500,
                    easing: "ease-in-out",
                    once: true,
                    mirror: false,
                    delay: 0
                });
            </script>
            <script src="/js/profile.js" type="module"></script>
</body>

</html>