<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,800;0,900;1,900&family=Ubuntu&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/79094805a6.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/trix@2.0.0/dist/trix.css">
    <link href="/css/createpost.css" rel="stylesheet" />
    <title>
        create
    </title>
</head>

<body>
    <!-- <hr class="divider"> -->
    <%- include('partials/nav.ejs') %>
        <form action="/createpost" method="POST" id="createForm">
            <input id="x" type="hidden" name="content">
            <input type="text" name="title" id="postTitle" placeholder="TITLE" required class="block-display">
            <div class="coverPic-container">
                <h3>Cover Image</h3>
                <div class="coverPic">
                    <div class="cover-image-container">
                        <img src="/Images/pexels-jessica-lewis-creative-606541.jpg" alt="" class="cover-image">
                    </div>
                    <label>
                        <input type="file" style="display:none" id="coverImage" name="coverImage" accept="image/*"
                            class="block-display" />
                    </label>
                    <span class="pic-icon btn btn-outline-dark"
                        onclick="document.getElementById('coverImage').click()">Upload
                        <i class="fa-solid fa-file-arrow-up"></i></span>
                </div>
            </div>
            <textarea name="description" id="postDescription" placeholder="Description...(NO TOO MUCH TALK ABEG)"
                required></textarea>
            <div class="editor">
                <trix-editor input="x" placeholder="Type here..." required class="block-display"></trix-editor>
            </div>
            <div>
                <p style="color: red;">You can select at most 3</p>
                <div class="tag-selector">
                </div>
            </div>

        </form>
        <button class="btn btn-outline-dark submit">Post <i class="fa-solid fa-paper-plane fa-fade"></i></button>
        <div class="toast mt-3">
            <div class="toast-header">
                <p>header</p>
            </div>
            <div class="toast-body">
                <p class="toast-text"></p>
            </div>
        </div>
        <!-- <%- include('partials/footer.ejs') %> -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

        <script type="text/javascript" src="https://unpkg.com/trix@2.0.0/dist/trix.umd.min.js"></script>

        <script src="/js/createpost.js" type="module"></script>
</body>

</html>