<body>
    <hr class="divider">
    <%- include('partials/nav.ejs') %>
        <div class="newsletter">
            <h1>Latest Updates: Developments in the writing world</h1>
            <p>Subscibe to learn about new trends among writers</p>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Your Email">
                <div class="input-group-append">
                    <button class="btn btn-dark">Subscribe</button>
                </div>
            </div>
        </div>

        <section class="highlights-section" data-aos="zoom-out-up">
            <h3>Highlight of the week</h3>
            <div class="row highlight-group">
                <div class="blog-details" id="main-highlight">
                    <div id="main-highlight-image" class="blog-image">
                        <div class="overlay"></div>
                        <img src="" alt="">
                        <p class="blog-date"><span id="main-highlight-date"></span><span class="blog-author"
                                id="main-highlight-blog-author"></span></p>
                    </div>

                    <div class="blog-text" id="main-highlight-details">
                        <!-- <a href="" class="redirect">Read More<i class="fa-solid fa-arrow-right"></i></a> -->
                        <h5 id="main-highlight-title" class="blog-title"></h5>
                        <p id="main-highlight-description" class="blog-description">
                        <div class="blog-tags" id="main-highlight-tags">

                        </div>
                    </div>
                </div>
                <div class="other-highlights">
                    <!-- add the class row to each of the highlights -->

                </div>
            </div>
        </section>
        <hr class="divider">
        <section class="other-posts-section">
            <h3>Recent Posts</h3>
            <div class="other-posts">
                <div class="blog-details">
                    <div class="blog-image">
                        <div class="overlay"></div>
                        <img src=></img>
                        <p class="blog-date"><span class="blog-author"></span></p>
                    </div>
                    <div class="blog-text">
                        <a href="" class="redirect">Read More<i class="fa-solid fa-arrow-right"></i></a>

                        <h5 class="blog-title"></h5>
                        <p class="blog-description">
                        </p>
                        <div class="blog-tags">
                            <p class="tag btn btn-outline-dark"></p>
                            <p class="tag btn btn-outline-dark"></p>
                        </div>

                    </div>
                </div>
            </div>
        </section>


        <footer data-aos="fade-up">
            <form class="subscribe">
                <div>
                    <h3>Sign Up to our newsletter</h3>
                    <p>Stay up to date with the latest news, announcement and articles</p>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Your Email">
                    <div class="input-group-append">
                        <button class="btn btn-dark">Subscribe</button>
                    </div>
                </div>
            </form>

            <div class="footer-items">
                <div class="col">
                    <a class="navbar-brand" href="#">SoroSoke</a>
                    <p>Write to your heart's content</p>
                </div>
                <div class="col">
                    <ul>
                        <li><a href="">Pricing</a></li>
                        <li><a href="">Contact Us</a></li>
                        <li><a href="">Terms and Conditions</a></li>
                        <li><a href="">Legal</a></li>
                    </ul>
                </div>
            </div>
            <h5>&copy;2023 SóróSoke</h5>
        </footer>
