<body>
    <hr class="divider">
    <%- include('partials/nav.ejs') %>
        <div class="newsletter">
            <h1>Latest Updates: Developments in the writing world</h1>
            <p>Subscibe to learn about new trends among writers</p>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Your Email">
                <div class="input-group-append">
                    <button class="btn btn-dark">Subscribe</button>
                </div>
            </div>
        </div>

        <section class="highlights-section">
            <h3>Highlight of the week</h3>
            <div class="row highlight-group">
                <div class="blog-details" id="main-highlight">
                    <div id="main-highlight-image" class="blog-image">
                        <div class="overlay"></div>
                        <img src="" alt="">
                        <p class="blog-date"><span id="main-highlight-date"></span><a class="blog-author"
                                id="main-highlight-blog-author"></a></p>
                    </div>

                    <div class="blog-text" id="main-highlight-details">
                        <!-- <a href="" class="redirect">Read More<i class="fa-solid fa-arrow-right"></i></a> -->
                        <a id="main-highlight-title" class="blog-title"></a>
                        <p id="main-highlight-description" class="blog-description">
                        <div class="blog-tags" id="main-highlight-tags">

                        </div>
                    </div>
                </div>
                <h3 class="other-highlights-header">Other Highlights</h3>
                <div class="other-highlights">
                    <!-- add the class row to each of the highlights -->

                </div>
            </div>
        </section>
        <hr class="divider">
        <section class="other-posts-section">
            <h3>Recent Posts</h3>
            <div class="other-posts">

            </div>
        </section>


        <%- include('partials/footer.ejs') %>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
